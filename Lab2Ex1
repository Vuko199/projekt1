<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>CS424, Lab 2, Exercise 1</title>
<style>
    body {
        background-color: #FFFFFF;
    }
    canvas {
        background-color: white;
        display: block;
    }
    #canvasholder {
        border:2px solid black;
        float: left;
    }
</style>
<script>
    "use strict";

    var canvas;
    var graphics;

    function draw() {
        graphics.clearRect(0, 0, 600, 600);

        // Face
        graphics.fillStyle = "red";
        graphics.beginPath();
        graphics.arc(300, 300, 100, 0, 2 * Math.PI);
        graphics.fill();
        graphics.stroke();

        // Eyes (left and right outer white)
        graphics.fillStyle = "white";
        graphics.beginPath();
        graphics.arc(260, 260, 20, 0, 2 * Math.PI);
        graphics.fill();

        graphics.beginPath();
        graphics.arc(340, 260, 20, 0, 2 * Math.PI);
        graphics.fill();

        // Eyes pupils (black)
        graphics.fillStyle = "black";
        graphics.beginPath();
        graphics.arc(260, 260, 10, 0, 2 * Math.PI);
        graphics.fill();

        graphics.beginPath();
        graphics.arc(340, 260, 10, 0, 2 * Math.PI);
        graphics.fill();

        // Eye shine (small white dot)
        graphics.fillStyle = "white";
        graphics.beginPath();
        graphics.arc(255, 255, 4, 0, 2 * Math.PI);
        graphics.fill();

        graphics.beginPath();
        graphics.arc(335, 255, 4, 0, 2 * Math.PI);
        graphics.fill();

        // Mouth (black half-circle)
        graphics.beginPath();
        graphics.arc(300, 320, 50, 0, Math.PI, false);
        graphics.lineWidth = 4;
        graphics.stroke();
        graphics.fillStyle = "black";
        graphics.fill();

        // Teeth
        graphics.fillStyle = "white";
        graphics.fillRect(285, 320, 10, 15);
        graphics.fillRect(305, 320, 10, 15);

        // Shorter curved mouth ends â€” 50% length, still touch mouth edges
        graphics.strokeStyle = "black";
        graphics.lineWidth = 3;

        // Left curve
        graphics.beginPath();
        graphics.moveTo(245, 310); // closer to the smile
        graphics.quadraticCurveTo(250, 320, 240, 330);
        graphics.stroke();

        // Right curve
        graphics.beginPath();
        graphics.moveTo(355, 310); // closer to the smile
        graphics.quadraticCurveTo(350, 320, 360, 330);
        graphics.stroke();
    }

    function addGraphicsContextExtras(graphics) {
        graphics.strokeLine = function(x1, y1, x2, y2) {
            this.beginPath();
            this.moveTo(x1, y1);
            this.lineTo(x2, y2);
            this.stroke();
        }
        graphics.fillCircle = function(x, y, r) {
            this.beginPath();
            this.arc(x, y, r, 0, 2 * Math.PI, false);
            this.fill();
        }
        graphics.strokeCircle = function(x, y, r) {
            this.beginPath();
            this.arc(x, y, r, 0, 2 * Math.PI, false);
            this.stroke();
        }
    }

    function init() {
        try {
            canvas = document.getElementById("canvas");
            graphics = canvas.getContext("2d");
        } catch (e) {
            document.getElementById("canvasholder").innerHTML =
                "Canvas graphics is not supported.<br>" +
                "An error occurred while initializing graphics.";
        }
        addGraphicsContextExtras(graphics);
        draw();
    }
</script>
</head>
<body onload="init()">
<h2>CS 424, Lab 2, Exercise 1</h2>
<noscript>
<p>JavaScript is required to use this page.</p>
</noscript>
<div id="canvasholder">
<canvas id="canvas" width="600" height="600">
Canvas not supported.
</canvas>
</div>
</body>
